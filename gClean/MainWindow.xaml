        <Label Content="v1" HorizontalAlignment="Left" Margin="108,41,-38,0" VerticalAlignment="Top" Foreground="#FF747474" FontStyle="Italic" Height="30" Width="294" HorizontalContentAlignment="Center" Grid.ColumnSpan="2" FontWeight="Bold"/>
    </Grid>
</Window>
