        <fa:ImageAwesome Icon="FolderOpen" Margin="28,142,302,89" Foreground="White" Opacity="0.1"/>
        <Label Content="gClean" Margin="108,10,106,0" VerticalAlignment="Top" Foreground="White" FontSize="41" Height="70" FontWeight="Bold"/>
